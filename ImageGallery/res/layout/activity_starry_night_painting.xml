<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

     <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starry_night"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Name: Starry Night" />
    
    <ImageView
        android:id="@id/starry_night"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="showName"
        android:src="@drawable/starry_night" />

</RelativeLayout>